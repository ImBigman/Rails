<%= form_with model: [:admin, @badge], local:true  do |form|  %>
<%= render 'shared/errors', resource: @badge %>
  <div class="form-group">
    <%= content_tag :label, t('admin.badges.new.name-label'), for: :name, class: 'h6' %><br>
    <%= form.text_field :name, id: :badge_name, placeholder: t('admin.badges.new.name-plasceholder'), class: "form-control", style: 'width: 40%' %>
  </div>
  <div class="form-group">
    <%= form.label :url, class: 'text-uppercase h6' %><br>
    <%= form.text_field :url, id: :badge_url, placeholder: t('admin.badges.new.url-plasceholder'), class: 'form-control', style: 'width: 72%'%>
  </div>
  <div class="form-group">
    <%= form.label t('admin.badges.new.kind-label'), class: 'h6' %><br>
    <%= form.text_field :kind, id: :badge_kind, class: "form-control", placeholder: t('admin.badges.new.kind-plasceholder'), style: 'width: 40%' %>
  </div>
<%= form.submit t('admin.badges.index.button'), class:'btn btn-outline-secondary' %>
<% end %>

