<h2>Passing the '<%= @test_passage.test.title %>' test</h2>
<h3>
  <%= @test_passage.current_question.body %> (current: <%= @test_passage.test.questions.to_a.index(@test_passage.current_question) + 1 %> from <%= @test_passage.test.questions.count %> questions)
</h3>
<%= form_with url: test_passage_path(@test_passage), local: true, method: :put do |form| %>
  <%= form.collection_check_boxes :answer_ids,  @test_passage.current_question.answers, :id, :body, include_hidden: false  do |a|%>
    <p>
      <%= a.check_box id: "answer_ids_#{a.object.id}"%>
      <%= a.label %>
    </p>
  <% end %><br>

  <p><%= form.submit 'Next' %></p>
<% end %>