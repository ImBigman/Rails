<% if resource.present? && resource.errors.any? %>
  <%= content_tag :div, class: "resource-errors", data: {resource_id: resource.id} do %>

  <h4 class="text-danger"><%= t('errors', count: resource.errors.count) %></h4>
    <ul>
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <%end %>
    </ul>
  <% end %><br>
<%end %>
